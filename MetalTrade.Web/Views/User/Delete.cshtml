@using MetalTrade.Web.ViewModels.User
@model DeleteUserViewModel

@{
    ViewData["Title"] = "Delete";
}

<h3 class="mt-5">Вы уверены, что хотите удалить пользователя?</h3>

<br />

<div>
    <h4>Пользователь: @Model.UserName</h4>
    <dl class="row">
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
        </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.WhatsAppNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.WhatsAppNumber)
            </dd>
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Да, удалить" class="btn btn-danger" /> 
    <a asp-action="Index" class="btn btn-success">Нет, вернуться обратно</a>
</form>

