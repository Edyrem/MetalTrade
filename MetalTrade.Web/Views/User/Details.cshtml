@using MetalTrade.Web.ViewModels.Promotion
@using MetalTrade.Web.ViewModels.User
@model UserViewModel

@{
    ViewData["Title"] = "View";

    var isCurrentUserAdmin = User.IsInRole("admin");
    var topEndDate = ViewData["TopEndDate"];
}

<h1>Пользователь</h1>

<div>
    <h4>@Model.UserName</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrWhiteSpace(Model.Photo))
            {
                if (Model.Photo.StartsWith("http"))
                {
                    <img src="@Model.Photo" style="width:auto;height:100px;" />
                }
                else
                {
                    Model.Photo = Model.Photo.Substring(1);
                    <img src="~/@Model.Photo" style="width:auto;height:100px;" />
                }
            }
            
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WhatsAppNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WhatsAppNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Roles)
        </dt>
        <dd class="col-sm-10">
            @foreach(var role in Model.Roles)
            {
                switch(role)
                {
                    case "admin": 
                        <span>Админ,</span> 
                        break;
                    case "moderator":
                        <span>Модератор,</span>
                        break;
                    case "supplier":
                        <span>Поставщик,</span>
                        break;
                    case "user":
                        <span>Пользователь</span>
                        break;
                }
            }
        </dd>
    </dl>
</div>
<div>
    @if(User.IsInRole("admin"))
    {
        @if (Model.Roles.Contains("supplier"))
        {
            <a asp-action="RemoveRole" asp-route-id="@Model?.Id" asp-route-role="supplier" asp-route-page="Details" class="btn btn-info">Удалить из поставщиков</a>
        }
        else
        {
            <a asp-action="AddRole" asp-route-id="@Model?.Id" asp-route-role="supplier" asp-route-page="Details" class="btn btn-info">Сделать поставщиком</a>
        }

        @if (Model.Roles.Contains("moderator"))
        {
            <a asp-action="RemoveRole" asp-route-id="@Model?.Id" asp-route-role="moderator" asp-route-page="Details" class="btn btn-primary">Удалить из модераторов</a>
        }
        else
        {
            <a asp-action="AddRole" asp-route-id="@Model?.Id" asp-route-role="moderator" asp-route-page="Details" class="btn btn-primary">Сделать модератором</a>
        }
        @if (Model.Roles.Contains("supplier"))
        {
            @if(Model.IsTop)
            {
                <div class="alert alert-warning">
                    Объявление в топе до: <b>@topEndDate</b>
                </div>

                <button id="deactivateUserTopBtn"
                        class="btn btn-danger"
                        data-id="@Model.Id">
                    Убрать из топа
                </button>
            }
            else
            {
                <div class="toggleParent">
                    <div class="d-flex gap-2 align-items-center">
                        <button class="toggleCommercialBtn btn btn-warning">
                            Топ
                        </button>
                    </div>

                    <div class="commercialFormContainer" style="display:none;">
                        @await Html.PartialAsync("_UserTopForm",
                        new PromotionActivateViewModel { TargetId = Model.Id })
                    </div>
                </div>
            }
            
        }
    }
</div>
<br />
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success">Редактировать</a>
    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">Удалить</a>
</div>
<br />
<div>
    <a asp-action="Index">Назад к списку</a>
</div>


@section Scripts {
    <script src="~/js/commercial.js"></script>

}