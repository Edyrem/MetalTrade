@using MetalTrade.Web.ViewModels.User
@model IEnumerable<UserViewModel>
@{
    ViewBag.Title = "Список пользователей";
    var isCurrentUserAdmin = User.IsInRole("admin");
}

@if (!Model.Any())
{
    <h4 class="">Пользователей не найдено </h4>
}
else
{
    <div class="row text-center">
        <table class="mt-3 table " style="width: 100%;">
            <tr>
                <th>Аватар</th>
                <th>Логин</th>
                <th>Email</th>
                <th>Номер телефона</th>
                <th>Роль</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var user in Model)
            {
                <tr>
                    @if (!string.IsNullOrWhiteSpace(user.Photo))
                    {
                        if (user.Photo.StartsWith("http"))
                        {
                            <td><img src="@user.Photo" style="width:40px;height:40px;border-radius:50%;" /></td>
                        }
                        else
                        {
                            user.Photo = user.Photo.Substring(1);
                            <td><img src="~/@user.Photo" style="width:40px;height:40px;border-radius:50%;" /></td>
                        }
                    }
                    else
                    {
                        <td></td>
                    }

                    <td><a asp-action="Details" asp-route-id="@user.Id" class="link-underline-light"><strong>@user.UserName</strong></a></td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    @if(user.Roles!=null && user.Roles.Any())
                    {
                        @if (user.Roles.Contains("admin"))
                        {
                            <td class="text-danger">Админ</td>
                            <td></td>
                        }

                        if (user.Roles.Contains("supplier"))
                        {
                            <td><div class="text-info">Поставщик</div></td>
                            if (isCurrentUserAdmin)
                            {
                                <td>
                                    <button class="btn btn-info" onclick="changeRole(@user.Id, 'supplier', false)">
                                        Удалить из поставщиков
                                    </button>
                                </td>
                            }
                        }
                        else
                        {
                            <td><div class="text-info">Пользователь</div></td>
                            if (isCurrentUserAdmin)
                            {
                                <td>
                                    <button class="btn btn-info"onclick="changeRole(@user.Id, 'supplier', true)">
                                        Сделать поставщиком
                                    </button>
                                </td>
                            }
                        }
                        if (user.Roles.Contains("moderator"))
                        {
                            <td><div class="text-primary">Модератор</div></td>
                            if (isCurrentUserAdmin)
                            {
                                <td>
                                    <button class="btn btn-primary" onclick="changeRole(@user.Id, 'moderator', false)">
                                        Удалить из модераторов
                                    </button>
                                </td>
                            }
                        }
                        else
                        {
                            <td><div class="text-info"></div></td>
                            if (isCurrentUserAdmin)
                            {
                                <td>
                                    <button class="btn btn-primary" onclick="changeRole(@user.Id, 'moderator', true)">
                                        Сделать модератором
                                    </button>
                                </td>
                            }
                        }
                    }
                    <td><a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Удалить</a></td>

                </tr>
            }
        </table>
        
        @if (ViewBag.TotalPages > 1)
        {
            <div class="mt-3 gap-2">
                @if (ViewBag.Page > 1)
                {
                    <button class="btn btn-secondary" onclick="loadUsers(@(ViewBag.Page - 1))">Назад</button>
                }
                <span>Страница <strong>@ViewBag.Page</strong> из <strong>@ViewBag.TotalPages</strong></span>
                @if (ViewBag.Page < ViewBag.TotalPages)
                {
                    <button class="btn btn-secondary" onclick="loadUsers(@(ViewBag.Page + 1))">Вперёд</button>
                }
            </div>
        }
    </div>
}

