@model MetalTrade.Web.ViewModels.Profile.UserProfileWithAdsViewModel

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<div class="container mt-4">
    <h2 class="mb-4">Мой профиль</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm p-3 text-center">
                <img src="@(Model.PhotoPath ?? "/images/default-avatar.png")"
                     class="rounded-circle mx-auto d-block mb-3"
                     style="width: 120px; height: 120px; object-fit: cover;"
                     alt="Аватар" />

                <h5>@Model.UserName</h5>

                <p class="form-control-plaintext">Телефон: +996@(Model.PhoneNumber)</p>
                <p class="form-control-plaintext">WhatsApp: +996@(Model.WhatsAppNumber)</p>

                <div class="d-grid gap-2">
                    <a href="/Profile/Edit"
                       class="btn btn-outline-primary btn-sm">
                        Изменить профиль
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm p-3">
                <h5 class="mb-3">Импорт объявлений из Excel</h5>

                <form asp-action="Load"
                      asp-controller="Advertisement"
                      method="post"
                      enctype="multipart/form-data">

                    <input type="file"
                           name="file"
                           accept=".xlsx"
                           class="form-control mb-3" />

                    <button type="submit"
                            class="btn btn-outline-primary">
                        Загрузить Excel
                    </button>

                    <button type="button" class="btn btn-danger ms-2" data-bs-toggle="modal" data-bs-target="#myModal">
                        <svg xmlns="http://www.w3.org/2000/svg" width="26" height="23" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                            <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0"/>
                        </svg>
                    </button>
                    
                    
                </form>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            @if (Model.IsSupplier)
            {
                <h4 class="mb-3">Мои объявления</h4>
                <hr />
                <div class="col-md-12">
                    @if (Model.Advertisements == null || !Model.Advertisements.Any())
                    {
                        <p class="text-muted">У вас пока нет объявлений.</p>
                    }
                    else
                    {
                        <div class="row">
                            @foreach (var ad in Model.Advertisements)
                            {
                                <div class="col-md-6 mb-3">
                                    <partial name="_AdCardPartial" model="ad" />
                                </div>
                            }
                        </div>
                    }

                </div>
            }
            else
            {
                <h4>Сохранённые объявления</h4>
            }
        </div>
    </div>
</div>


<div class="modal fade" id="myModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h2 class="modal-title w-100 text-center">Формат загрузки объявлений из Excel файла :</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body text-center">
                <h5 class="mt-3">Название Описание Цена Город Номер телефона Продукт Адрес</h5>
                <p class="mt-3 text-danger">Столбцы таблицы строго в этом порядке!</p>
            </div>
        </div>
    </div>
</div>


