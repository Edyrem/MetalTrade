@model MetalTrade.Application.ViewModels.UserProfileViewModel

<h2>Редактирование профиля</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    @Html.HiddenFor(m => m.Id)
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label class="form-label">Имя пользователя</label>
        <input asp-for="UserName" class="form-control"/>
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control"/>
    </div>

    <div class="mb-3">
        <label class="form-label">Телефон</label>
        <input asp-for="PhoneNumber" class="form-control"/>
    </div>

    <div class="mb-3">
        <label class="form-label">WhatsApp</label>
        <input asp-for="WhatsAppNumber" class="form-control"/>
    </div>

    <div class="mb-3">
        <label class="form-label">Фото</label>
        <input asp-for="Photo" type="file" class="form-control"/>
        @if (!string.IsNullOrEmpty(Model.PhotoPath))
        {
            <img src="@Model.PhotoPath" width="100" class="mt-2"/>
        }
    </div>

    <h5>Изменение пароля</h5>
    <div class="mb-3">
        <label class="form-label">Старый пароль</label>
        <input asp-for="OldPassword" type="password" class="form-control"/>
    </div>
    <div class="mb-3">
        <label class="form-label">Новый пароль</label>
        <input asp-for="NewPassword" type="password" class="form-control"/>
    </div>
    <div class="mb-3">
        <label class="form-label">Подтверждение пароля</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control"/>
    </div>


    <button type="submit" class="btn btn-success">Сохранить</button>
    <a href="/Profile/Index" class="btn btn-secondary">Отмена</a>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
