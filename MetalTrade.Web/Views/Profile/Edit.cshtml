    @model MetalTrade.Web.ViewModels.Profile.UserProfileEditViewModel


    <h2>Редактирование профиля</h2>

    <form asp-action="Edit" enctype="multipart/form-data" method="post">
        @Html.HiddenFor(m => m.Id)
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label class="form-label">Имя пользователя</label>
            <input asp-for="UserName" class="form-control"/>
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Email" class="form-control"/>
        </div>

        <div class="mb-3">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text">+996</span>
                <input asp-for="PhoneNumber"class="form-control"id="PhoneNumber"placeholder="700700700"inputmode="numeric"maxlength="9" />
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="WhatsAppNumber" class="form-label"></label>
            <div class="input-group">
                <span class="input-group-text">+996</span>
                <input asp-for="WhatsAppNumber"class="form-control"id="WhatsAppNumber"placeholder="700700700"inputmode="numeric"maxlength="9" />
            </div>
            <span asp-validation-for="WhatsAppNumber" class="text-danger"></span>
        </div>




        <div class="mb-3">
            <label class="form-label">Фото</label>
            <input asp-for="Photo" type="file" class="form-control"/>
            @if (!string.IsNullOrEmpty(Model.PhotoPath))
            {
                <img src="@Model.PhotoPath" width="100" class="mt-2"/>
            }
        </div>
        <div>
            <a asp-action="ChangePassword" class="btn btn-warning mt-3">Изменить пароль</a>
        </div>
        

        <button type="submit" class="btn btn-success">Сохранить</button>
        <a href="/Profile/Index" class="btn btn-secondary">Отмена</a>
    </form>


    <script>
        (function(){
            const LOCAL_LEN = 9;

            function onlyDigitsAndTrim($el){
                $el.on('input', function(){
                    let v = (this.value || '').replace(/\D/g, '');
                    if (v.length > LOCAL_LEN) v = v.slice(0, LOCAL_LEN);
                    this.value = v;
                });
                $el.on('paste', function(e){
                    const paste = (e.clipboardData || window.clipboardData).getData('text') || '';
                    const digits = paste.replace(/\D/g,'').slice(0,LOCAL_LEN);
                    e.preventDefault();
                    document.execCommand('insertText', false, digits);
                });
            }

            onlyDigitsAndTrim($('#PhoneNumber'));
            onlyDigitsAndTrim($('#WhatsAppNumber'));
            
        })();
    </script>



    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
