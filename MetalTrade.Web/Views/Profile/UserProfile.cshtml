@using MetalTrade.Domain.Enums
@model MetalTrade.Web.ViewModels.Profile.UserProfileWithAdsViewModel

@{
    var status = "";
    if (Model.Roles.Contains("user")) status = "Пользователь";
    if (Model.Roles.Contains("supplier")) 
        if (Model.IsTop) status = "ТОП Поставщик";
        else status = "Поставщик";
    if (Model.Roles.Contains("moderator")) status = "Модератор";
    if (Model.Roles.Contains("admin")) status = "Админ";
        
    
}
<div class="container mt-4">
    <h2 class="mb-4">Профиль пользователя</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm p-3 text-center">
                <img src="@(string.IsNullOrEmpty(Model.PhotoPath) ? "/images/default/avatar.jpg" : Model.PhotoPath)"
                     class="rounded-circle mx-auto d-block mb-3"
                     style="width: 120px; height: 120px; object-fit: cover;" alt="Аватар" />

                <h5>@Model.UserName</h5>

                @if (User.Identity!.IsAuthenticated)
                {
                    <p class="form-control-plaintext">Телефон: <b>+996@(Model.PhoneNumber)</b></p>
                    <p class="form-control-plaintext">WhatsApp: <b>+996@(Model.WhatsAppNumber)</b></p>
                    <p class="form-control-plaintext">Статус: <b>@status</b></p>
                }
                else
                {
                    <p class="text-muted">Контакты доступны после входа</p>
                }

            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            @if (Model.IsSupplier)
            {
                <h4 class="mb-3">Объявления пользователя</h4>
                <hr />

                @if (Model.Advertisements == null || !Model.Advertisements.Any())
                {
                    <p class="text-muted">У пользователя пока нет объявлений.</p>
                }
                else
                {
                    <div class="row">
                        @foreach (var ad in Model.Advertisements)
                        {
                            if (ViewBag.IsOwner || (!ViewBag.IsOwner && ad.Status == (int)AdvertisementStatus.Active))
                            {
                                <div class="col-md-4 mb-3">
                                    <partial name="_AdCardPartial" model="ad" />
                                </div>
                            }
                        }
                    </div>
                }
            }

        </div>
    </div>
</div>

