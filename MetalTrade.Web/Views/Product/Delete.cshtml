@model MetalTrade.Web.ViewModels.Product.DeleteProductViewModel

@{
    ViewBag.Title = Localizer["ViewBagTitle"];
}
<div class="container mt-5 justify-content-center align-content-center text-center">

    <div class=" justify-content-center text-center mt-5">
        <h1 class="mt-5">@Localizer["Header_1"] @Model.Name</h1>
        <h4 class="mt-5">@Localizer["Header_4"]</h4>
        <div class="row justify-content-center text-center mt-3">
            <div class="col-1">
                <form asp-action="Delete" method="post">
                    <input type="hidden" value="@Model.Id" name="id"/>
                    <button type="submit" class="btn btn-success">@Localizer["BtnConfirmYes"]</button>
                </form>
            </div>
            <div class="col-1">
                <a class="btn btn-danger" asp-action="Index" asp-route-id="@Model.Id">@Localizer["BtnConfirmNo"]</a>
            </div>
        </div>
    </div>
</div>
