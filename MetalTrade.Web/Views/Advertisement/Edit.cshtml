@model MetalTrade.Web.ViewModels.Advertisement.EditAdvertisementViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать</h1>

<h4>Объявление</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <input type="hidden" asp-for="UserId"/>
            <div class="form-group mt-2">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Body" class="control-label"></label>
                <textarea asp-for="Body" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control">
                    <option value="">-- Выберите продукт --</option>
                    @foreach (var product in Model.Products)
                    {
                        <option value="@product.Id">@product.Name</option>
                    }
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Добавить фото</label>
                <div class="d-flex align-items-start gap-2">
                    <button type="button" id="addPhotoBtn">+</button>
                    <div id="photoContainer"></div>
                </div>
                <div id="hiddenPhotoFileInputs"></div>
                <span asp-validation-for="PhotoFiles" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Редактировать" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h4>Фото объявления</h4>
        <hr />
        @if (Model.Photoes != null && Model.Photoes.Count > 0)
        {
            <div class="photo-list-container">
                <div class="photo-list">
                    @foreach (var photo in Model.Photoes)
                    {
                        <div class="photo-card" data-photo-id="@photo.Id">
                            <img src="@photo.PhotoLink" class="photo-card-img" />

                            <button class="photo-delete-btn"
                                    title="Удалить"
                                    data-id="@photo.Id"
                                    data-link="@photo.PhotoLink">
                                <i class="fas fa-trash"></i>
                                <span class="tooltip">Удалить фото</span>
                            </button>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <p class="text-muted">Фото отсутствуют.</p>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-action="Details" class="btn btn-outline-secondary" asp-route-id="@Model?.Id">Назад</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/js/advertisement/ad-photo-preview.js"></script>
        <link rel="stylesheet" href="~/css/advertisement/ad-photo-preview.css" />
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="~/js/advertisement/ad-photo-remove.js"></script>
        <link rel="stylesheet" href="~/css/advertisement/ad-photo-remove.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    }
}