@model MetalTrade.Web.ViewModels.Advertisement.EditAdvertisementViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать</h1>

<h4>Объявление</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group mt-2">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Body" class="control-label"></label>
                <textarea asp-for="Body" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control">
                    <option value="">-- Выберите продукт --</option>
                    @foreach (var product in Model.Products)
                    {
                        <option value="@product.Id">@product.Name</option>
                    }
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="PhotoFiles" class="control-label">Добавить новые фото</label>
                <input asp-for="PhotoFiles" class="form-control" type="file" accept="image/*" multiple />
                <small class="form-text text-muted">Выберите новые фото для добавления</small>
                <span asp-validation-for="PhotoFiles" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Редактировать" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <h4>Фото объявления</h4>
        <hr />
        @if (Model.Photoes != null && Model.Photoes.Count > 0)
        {
            <div class="d-flex flex-wrap">
                @foreach (var photo in Model.Photoes)
                {
                    <div class="border p-2 m-2 text-center" 
                        style="width: 170px; height: 170px; display: flex; flex-direction: column; align-items: center; justify-content: center;">
                        <img src="@photo.PhotoLink" style="width:150px; height:150px; object-fit: cover; border:1px solid #ccc;" />
                        <form asp-action="DeleteAdvertisementPhoto" method="post" class="mt-2">
                            <input type="hidden" name="advertisementPhotoId" value="@photo.Id" />
                            <input type="hidden" name="photoLink" value="@photo.PhotoLink" />
                            <input type="hidden" name="advertisementId" value="@Model.Id" />
                            <button class="btn btn-sm btn-danger">Удалить</button>
                        </form>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">Фото отсутствуют.</p>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-action="Details" class="btn btn-outline-secondary" asp-route-id="@Model?.Id">Назад</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}