@using MetalTrade.Domain.Enums
@model MetalTrade.Web.ViewModels.Advertisement.AdvertisementViewModel

@if (Model == null)
{
    <p class="text-danger">Объявление не найдено.</p>
    return;
}

@{
    var isAdmin = ViewData["IsAdmin"] as bool? == true;

    int? currentUserId = ViewData["CurrentUserId"] as int?;

    var isOwner =
        User.Identity?.IsAuthenticated == true &&
        currentUserId.HasValue &&
        Model != null &&
        Model.UserId == currentUserId.Value;
}



<h1>Детали</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div>
    <h4>Объявление</h4>
    <hr />
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="fw-bold">@Model.Title</h2>
                
                <p class="text-muted mb-1">
                    Артикул: <span class="fw-semibold">#@Model.Id</span>
                </p>

                <p class="mb-3">
                    Автор:
                    @if (Model.User != null)
                    {
                        <a asp-controller="Profile"
                           asp-action="User"
                           asp-route-id="@Model.UserId"
                           class="fw-semibold text-decoration-none">
                            @Model.User.UserName
                        </a>
                    }
                    else
                    {
                        <span class="text-muted">Автор не указан</span>
                    }
                </p>

                
                @if (isAdmin || isOwner)
                {
                    <div class="mb-2">
                        <span class="badge
                            @(Model.Status == (int)AdvertisementStatus.Active ? "bg-success" :
                                                 Model.Status == (int)AdvertisementStatus.Draft ? "bg-warning text-dark" :
                                                 Model.Status == (int)AdvertisementStatus.Rejected ? "bg-danger" :
                                                 "bg-secondary")">
                            @(Model.Status switch
                            {
                                (int)AdvertisementStatus.Draft => "На рассмотрении",
                                (int)AdvertisementStatus.Active => "Активно",
                                (int)AdvertisementStatus.Rejected => "Отклонено",
                                _ => "Деактивировано"
                            })
                        </span>
                    </div>
                }

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Body)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Body)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd class="col-sm-10">
                        <p class="fs-4 fw-semibold text-success">@Model.Price.ToString("C")</p>
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CreateDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreateDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Product)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Product.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.City)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.City)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>
                </dl>
                <div>
                    @if (isAdmin || isOwner)
                    {
                        <a asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@Model?.Id" asp-route-returnUrl="@Context.Request.Path">Редактировать</a>
                        <b> | </b>
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@Model?.Id">Удалить</a>
                        <b> | </b>
                        if(isAdmin)
                        {
                            switch(Model.Status)
                            {
                                case (int)AdvertisementStatus.Active:
                                    <a asp-controller="Advertisement" asp-action="ArchiveAdvertisement" class="btn btn-outline-warning" asp-route-id="@Model?.Id">Деактивировать</a>
                                    break;
                                case (int)AdvertisementStatus.Archived:
                                    <a asp-controller="Advertisement" asp-action="ApproveAdvertisement" class="btn btn-outline-success" asp-route-id="@Model?.Id">Активировать</a>
                                    break;
                                case (int)AdvertisementStatus.Draft:
                                    <a asp-controller="Advertisement" asp-action="ApproveAdvertisement" class="btn btn-outline-success" asp-route-id="@Model?.Id">Одобрить</a>
                                    <b> | </b>
                                    <a asp-controller="Advertisement" asp-action="RejectAdvertisement" class="btn btn-outline-secondary" asp-route-id="@Model?.Id">Отклонить</a>
                                    break;
                                case (int)AdvertisementStatus.Rejected:
                                    <a asp-controller="Advertisement" asp-action="ArchiveAdvertisement" class="btn btn-outline-warning" asp-route-id="@Model?.Id">Деактивировать</a>
                                    break;
                            }                            
                        }
                    }
                    
                </div>
                <br/>
                <div>
                    <a asp-action="Index">Назад к списку</a>
                </div>
            </div>
            <div class="col-md-6">
                @if (Model != null && Model.Photoes != null && Model.Photoes.Count > 0)
                {
                    string carouselId = $"ad-carousel-{Model.Id}";
                    <div id="@carouselId" class="carousel slide shadow-sm" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @for (int i = 0; i < Model.Photoes.Count; i++)
                            {
                                var photo = Model.Photoes[i];
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@photo.PhotoLink" class="d-block w-100 rounded"
                                         style="height: 400px; object-fit: cover" />
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#@carouselId" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Prev</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#@carouselId" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>