@using MetalTrade.Domain.Enums
@using MetalTrade.Web.ViewModels.Commercial
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MetalTrade.Web.ViewModels.Advertisement.AdvertisementViewModel

@if (Model == null)
{
    <p class="text-danger">Объявление не найдено.</p>
    return;
}

@{
    var isAdmin = ViewData["IsAdmin"] as bool? == true;

    int? currentUserId = ViewData["CurrentUserId"] as int?;

    var isOwner =
        User.Identity?.IsAuthenticated == true &&
        currentUserId.HasValue &&
        Model != null &&
        Model.UserId == currentUserId.Value;
    
    var phoneNumber = "996" + Model.PhoneNumber;
    var message = $"Здравствуйте! Пишу по поводу объявления '{Model.Title}' с сайта METALTRADE. " ;
    
}



<h1>Детали</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div>
    <h4>Объявление</h4>
    <hr />
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="fw-bold">@Model.Title</h2>
                
                <p class="text-muted mb-1">
                    Артикул: <span class="fw-semibold">#@Model.Id</span>
                </p>

                <p class="mb-3">
                    Автор:
                    @if (Model.User != null)
                    {
                        <a asp-controller="Profile"
                           asp-action="User"
                           asp-route-id="@Model.UserId"
                           class="fw-semibold text-decoration-none">
                            @Model.User.UserName
                        </a>
                    }
                    else
                    {
                        <span class="text-muted">Автор не указан</span>
                    }
                </p>

                
                @if (isAdmin || isOwner)
                {
                    <div class="mb-2">
                        <span class="badge
                            @(Model.Status == (int)AdvertisementStatus.Active ? "bg-success" :
                            Model.Status == (int)AdvertisementStatus.Draft ? "bg-warning text-dark" :
                            Model.Status == (int)AdvertisementStatus.Rejected ? "bg-danger" :
                            "bg-secondary")">
                            @(Model.Status switch
                            {
                                (int)AdvertisementStatus.Draft => "На рассмотрении",
                                (int)AdvertisementStatus.Active => "Активно",
                                (int)AdvertisementStatus.Rejected => "Отклонено",
                                _ => "Деактивировано"
                            })
                        </span>
                    </div>
                }

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Body)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Body)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd class="col-sm-10">
                        <p class="fs-4 fw-semibold text-success">@Model.Price.ToString("C")</p>
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CreateDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreateDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Product)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Product.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.City)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.City)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </dt>
                    <dd class="col-sm-10">
                        +996 @Html.DisplayFor(model => model.PhoneNumber)
                        
                        <a class="btn btn-success ms-5" href="https://wa.me/@phoneNumber?text=@message"  target="_blank">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="23" fill="currentColor" class="bi bi-whatsapp" viewBox="0 0 16 16">
                                <path d="M13.601 2.326A7.85 7.85 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.9 7.9 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.9 7.9 0 0 0 13.6 2.326zM7.994 14.521a6.6 6.6 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.56 6.56 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592m3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.73.73 0 0 0-.529.247c-.182.198-.691.677-.691 1.654s.71 1.916.81 2.049c.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232"/>
                            </svg>
                             Написать в WhatsApp
                        </a>
                        
                    </dd>
                </dl>
                <div>
                    @if (isAdmin || isOwner)
                    {
                        <a asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@Model?.Id" asp-route-returnUrl="@Context.Request.Path">Редактировать</a>
                        <b> | </b>
                        <a asp-action="CreatePhoto" class="btn btn-outline-secondary" asp-route-id="@Model?.Id" asp-route-returnUrl="@Context.Request.Path">Добавить фото</a>
                        <b> | </b>
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@Model?.Id">Удалить</a>
                        <b> | </b>
                        if(isAdmin)
                        {
                            switch(Model.Status)
                            {
                                case (int)AdvertisementStatus.Active:
                                    <a asp-controller="Advertisement" asp-action="ArchiveAdvertisement" class="btn btn-outline-warning" asp-route-id="@Model?.Id">Деактивировать</a>
                                    break;
                                case (int)AdvertisementStatus.Archived:
                                    <a asp-controller="Advertisement" asp-action="ApproveAdvertisement" class="btn btn-outline-success" asp-route-id="@Model?.Id">Активировать</a>
                                    break;
                                case (int)AdvertisementStatus.Draft:
                                    <a asp-controller="Advertisement" asp-action="ApproveAdvertisement" class="btn btn-outline-success" asp-route-id="@Model?.Id">Одобрить</a>
                                    <b> | </b>
                                    <a asp-controller="Advertisement" asp-action="RejectAdvertisement" class="btn btn-outline-secondary" asp-route-id="@Model?.Id">Отклонить</a>
                                    break;
                                case (int)AdvertisementStatus.Rejected:
                                    <a asp-controller="Advertisement" asp-action="ArchiveAdvertisement" class="btn btn-outline-warning" asp-route-id="@Model?.Id">Деактивировать</a>
                                    break;
                            }                            
                        }
                    }
                    
                </div>
                @if (isOwner && Model.IsAd && Model.AdEndDate.HasValue)
                {
                    <div class="alert alert-info">
                        Ваша реклама активна до
                        <b>@Model.AdEndDate.Value.ToString("dd.MM.yyyy")</b>
                    </div>
                }


                @if (isAdmin || User.IsInRole("moderator"))
                    {
                        @if (Model.IsAd)
                        {
                            <div class="alert alert-warning">
                                Реклама активна до:
                                @if (Model.AdEndDate.HasValue)
                                {
                                    <br />
                                    <b>@Model.AdEndDate.Value.ToString("dd.MM.yyyy")</b>
                                }
                            </div>

                            <button id="deactivateCommercialBtn"
                                    class="btn btn-danger"
                                    data-id="@Model.Id">
                                Убрать рекламу
                            </button>
                        }
                        else
                        {
                            <div class="d-flex gap-2 align-items-center">
                                <button id="toggleCommercialBtn"
                                        class="btn btn-warning">
                                    Реклама
                                </button>
                            </div>

                            <div id="commercialFormContainer" style="display:none;">
                                @await Html.PartialAsync("_CommercialForm",
                                    new CommercialViewModel { AdvertisementId = Model.Id })
                            </div>
                        }
                    }
                
                <br/>
                <div>
                    <a asp-action="Index">Назад к списку</a>
                </div>
            </div>
            <div class="col-md-6">
                @if (Model != null && Model.Photoes != null && Model.Photoes.Count > 0)
                {
                    string carouselId = $"ad-carousel-{Model.Id}";
                    <div id="@carouselId" class="carousel slide shadow-sm" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @for (int i = 0; i < Model.Photoes.Count; i++)
                            {
                                var photo = Model.Photoes[i];
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@photo.PhotoLink" class="d-block w-100 rounded"
                                         style="height: 400px; object-fit: cover" />
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#@carouselId" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Prev</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#@carouselId" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/commercial.js"></script>
}
