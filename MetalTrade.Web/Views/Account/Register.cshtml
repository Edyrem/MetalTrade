@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MetalTrade.Web.ViewModels.RegisterViewModel
@inject IViewLocalizer Localizer

<h2>@Localizer["Register"]</h2> <form asp-action="Register" method="post" enctype="multipart/form-data"> @Html.AntiForgeryToken() <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row col-md-5">
        <div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">@Localizer["User Name"]</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>

        <div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">@Localizer["Email"]</label>
                <input asp-for="Email" class="form-control" id="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">@Localizer["Phone Number"]</label>
                <div class="input-group">
                    <span class="input-group-text">+996</span>
                    <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" placeholder="700700700" inputmode="numeric" />
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="WhatsAppNumber" class="control-label">@Localizer["WhatsApp Number"]</label>
                <div class="input-group">
                    <span class="input-group-text">+996</span>
                    <input asp-for="WhatsAppNumber" class="form-control" id="WhatsAppNumber" placeholder="700700700" inputmode="numeric" />
                    <button id="waSyncRestore" type="button" class="btn btn-outline-secondary" title="Вставить номер телефона">↺</button>
                </div>
                <span asp-validation-for="WhatsAppNumber" class="text-danger"></span>
            </div>
        </div>


        <div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label">@Localizer["Photo"]</label>
                <input asp-for="Photo" class="form-control" type="file" id="Photo" accept="image/*" />
                <img id="photoPreview" src="" alt="Превью" style="max-width:150px;display:none;margin-top:10px;border-radius:8px;" />
                <input type="hidden" id="PhotoUrl" name="PhotoUrl" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
        </div>

        <div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">@Localizer["Password"]</label>
                <div class="input-group">
                    <input asp-for="Password" class="form-control"  id="password"/>
                    <button type="button" class="btn btn-light " id="eye-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="21" height="21" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                            <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0"/>
                            <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7"/>
                        </svg>
                    </button>
                </div>
                
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div>
            <div class="form-group">
                <label asp-for="PasswordConfirm" class="control-label">@Localizer["Confirm Password"]</label>

                <div class="input-group">
                    <input asp-for="PasswordConfirm" class="form-control" type="password"  id="repeat"/>
                    <button type="button"  class="btn btn-light" id="repeat-eye">
                        <svg xmlns="http://www.w3.org/2000/svg" width="21" height="21" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                            <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0"/>
                            <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7"/>
                        </svg>
                    </button>
                </div>
                
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
        </div>

        <div class="col-12 mt-3">
            <button type="submit" class="btn btn-primary">@Localizer["Register"]</button>
        </div>
    </div>

</form>

@section Scripts {
    <script src="~/js/register.js"></script>
    <script src="~/js/password.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}