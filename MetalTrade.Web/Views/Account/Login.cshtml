@using Microsoft.AspNetCore.Mvc.Localization
@model MetalTrade.Web.ViewModel.LoginViewModel
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["Login"];
}

<h2>@Localizer["Login"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label">@Localizer["Username or Email"]</label><br />
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">@Localizer["Password"]</label><br />
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RememberMe" class="control-label">@Localizer["Remember Me"]</label><br />
                <input asp-for="RememberMe" />
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}